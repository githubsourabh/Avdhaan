<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/access_denied_background"
        android:scaleType="fitXY"
        android:alpha="0.25"
        android:contentDescription="@null"
        android:importantForAccessibility="no" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/access_denied_title"
                android:textColor="@color/vedic_primary"
                android:textSize="22sp"
                android:fontFamily="@font/mukta_regular"
                android:gravity="center"
                android:shadowColor="#55000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.5"
                android:layout_marginTop="80dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/access_denied_subtitle"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/mukta_regular"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/access_denied_usage_request"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/mukta_regular"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/access_denied_usage_description"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/mukta_regular"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_grant_usage_access"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_grant_usage_access"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_decline_usage_access"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_decline_usage_access"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>