<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/watermark_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/samay_chakra"
        android:scaleType="fitCenter"
        android:alpha="0.15"
        android:contentDescription="@null"
        android:importantForAccessibility="no" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/schedule_setup_description"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TimePicker
                android:id="@+id/startTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                android:layout_marginBottom="0dp"/>

            <TimePicker
                android:id="@+id/endTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                android:layout_marginBottom="0dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:rowCount="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <ToggleButton
                    android:id="@+id/toggleSun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="S"
                    android:textOn="S"/>

                <ToggleButton
                    android:id="@+id/toggleMon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="M"
                    android:textOn="M"/>

                <ToggleButton
                    android:id="@+id/toggleTue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="T"
                    android:textOn="T"/>

                <ToggleButton
                    android:id="@+id/toggleWed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="W"
                    android:textOn="W"/>

                <ToggleButton
                    android:id="@+id/toggleThu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="T"
                    android:textOn="T"/>

                <ToggleButton
                    android:id="@+id/toggleFri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="F"
                    android:textOn="F"/>

                <ToggleButton
                    android:id="@+id/toggleSat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:textOff="S"
                    android:textOn="S"/>
            </GridLayout>

            <Button
                android:id="@+id/saveScheduleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_schedule"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scheduleList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:enabled="false"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout> 