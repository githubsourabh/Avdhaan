<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="@string/add_schedule"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_home" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_schedule"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TimePicker
        android:id="@+id/startTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>

    <TimePicker
        android:id="@+id/endTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="1"
        android:layout_marginTop="16dp">

        <ToggleButton
            android:id="@+id/toggleSun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="S"
            android:textOn="S"/>

        <ToggleButton
            android:id="@+id/toggleMon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="M"
            android:textOn="M"/>

        <ToggleButton
            android:id="@+id/toggleTue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="T"
            android:textOn="T"/>

        <ToggleButton
            android:id="@+id/toggleWed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="W"
            android:textOn="W"/>

        <ToggleButton
            android:id="@+id/toggleThu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="T"
            android:textOn="T"/>

        <ToggleButton
            android:id="@+id/toggleFri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="F"
            android:textOn="F"/>

        <ToggleButton
            android:id="@+id/toggleSat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:textOff="S"
            android:textOn="S"/>
    </GridLayout>

    <Button
        android:id="@+id/saveScheduleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_schedule"
        android:layout_marginTop="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scheduleList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp"/>

</LinearLayout>

