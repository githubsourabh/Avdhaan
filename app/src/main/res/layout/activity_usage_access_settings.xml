<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/usage_access_required_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/usage_access_required_message"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/button_grant_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_grant_permission"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_proceed_after_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_proceed_after_permission"
        style="@style/Widget.Material3.Button.OutlinedButton"/>

</LinearLayout> 