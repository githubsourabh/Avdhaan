<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/vedic_arjuna_watermark"
        android:scaleType="fitXY"
        android:alpha="0.35"
        android:contentDescription="@null"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/title_avdhaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AvdhÄan"
            android:textSize="48sp"
            android:textColor="@color/vedic_primary"
            android:fontFamily="@font/mukta_regular"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Switch
                    android:id="@+id/switch_usage_tracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage Tracking"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/info_usage_tracking"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Info about Usage Tracking" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Switch
                    android:id="@+id/focus_swtich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SWITCH_FOCUS_MODE"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/info_focus_mode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Info about Focus Mode" />
            </LinearLayout>

            <Button
                android:id="@+id/schedule_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BTN_SET_FOCUS_SCH"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btn_select_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BTN_SELECT_APPS_TO_BLK"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btn_view_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Usage Logs"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
